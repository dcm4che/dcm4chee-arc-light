<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>dcm4chee-arc-parent</artifactId>
    <groupId>org.dcm4che.dcm4chee-arc</groupId>
    <version>5.13.3</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>dcm4chee-arc-ui2</artifactId>
  <packaging>war</packaging>

  <properties>
    <frontend-maven-plugin.version>1.2</frontend-maven-plugin.version>
    <node.version>v6.9.1</node.version>
    <yarn.version>v0.23.4</yarn.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.dcm4che.dcm4chee-arc</groupId>
      <artifactId>dcm4chee-arc-realm-rs</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>ng-build</id>
      <activation>
        <file>
          <missing>target/webapp</missing>
        </file>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>com.github.eirslett</groupId>
            <artifactId>frontend-maven-plugin</artifactId>
            <version>${frontend-maven-plugin.version}</version>
            <executions>
              <execution>
                <id>install node and yarn</id>
                <goals>
                  <goal>install-node-and-yarn</goal>
                </goals>
                <configuration>
                  <nodeVersion>${node.version}</nodeVersion>
                  <yarnVersion>${yarn.version}</yarnVersion>
                </configuration>
              </execution>
              <execution>
                <id>yarn install --pure-lockfile</id>
                <goals>
                  <goal>yarn</goal>
                </goals>
                <configuration>
                  <arguments>install --pure-lockfile</arguments>
                </configuration>
              </execution>
              <execution>
                <!--<id>npm run-script prod</id>-->
                <id>yarn run prod</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>yarn</goal>
                </goals>
                <configuration>
                  <!--<arguments>run-script prod</arguments> //use this for production-->
                  <arguments>run prod</arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>unsecure</id>
      <activation>
        <property>
          <name>!secure</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-war-plugin</artifactId>
            <version>${maven-war-plugin.version}</version>
            <configuration>
              <classifier>unsecure</classifier>
              <webXml>${project.basedir}/src/main/webxml/web.xml</webXml>
              <webResources>
                <resource>
                  <directory>target/webapp</directory>
                </resource>
              </webResources>
              <webappDirectory>${project.build.directory}/${project.build.finalName}-unsecure</webappDirectory>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>secure</id>
      <activation>
        <property>
          <name>secure</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-war-plugin</artifactId>
            <version>${maven-war-plugin.version}</version>
            <configuration>
              <classifier>secure</classifier>
              <webXml>${project.basedir}/src/main/webxml/web-secure.xml</webXml>
              <webResources>
                <resource>
                  <directory>target/webapp</directory>
                </resource>
              </webResources>
              <webappDirectory>${project.build.directory}/${project.build.finalName}-secure</webappDirectory>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>