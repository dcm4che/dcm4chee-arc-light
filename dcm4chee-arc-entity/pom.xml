<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>dcm4chee-arc-parent</artifactId>
    <groupId>org.dcm4che.dcm4chee-arc</groupId>
    <version>5.13.3</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>dcm4chee-arc-entity</artifactId>

  <dependencies>
    <dependency>
      <groupId>org.dcm4che.dcm4chee-arc</groupId>
      <artifactId>dcm4chee-arc-conf</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <execution>
            <id>default-jar</id>
            <configuration>
              <includes>
                <include>org/**</include>
              </includes>
            </configuration>
          </execution>
          <execution>
            <id>persistence-unit</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>${db}</classifier>
              <includes>
                <include>org/**</include>
                <include>META-INF/persistence.xml</include>
                <include>${mapping-file}</include>
              </includes>
            </configuration>
          </execution>
          <execution>
            <id>sql-schema</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>${db}-sql</classifier>
              <includes>
                <include>sql/create-${db}.sql</include>
                <include>sql/update-*-${db}.sql</include>
                <include>sql/drop-${db}.sql</include>
                <include>sql/create-index.sql</include>
                <include>sql/create-case-insensitive-index.sql</include>
                <include>sql/create-fk-index.sql</include>
                <include>META-INF/maven/remote-resources.xml</include>
              </includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
        <version>1.0-alpha-2</version>
        <executions>
          <execution>
            <phase>initialize</phase>
            <goals>
              <goal>read-project-properties</goal>
            </goals>
            <configuration>
              <files>
                <file>src/main/filters/${db}.properties</file>
              </files>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>io.github.divinespear</groupId>
        <artifactId>jpa-schema-maven-plugin</artifactId>
        <version>0.1.12</version>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <persistenceUnitName>dcm4chee-arc</persistenceUnitName>
              <databaseProductName>${databaseProductName}</databaseProductName>
              <databaseMajorVersion>${databaseMajorVersion}</databaseMajorVersion>
              <databaseMinorVersion>${databaseMinorVersion}</databaseMinorVersion>
              <scriptAction>drop-and-create</scriptAction>
              <outputDirectory>${project.build.outputDirectory}/sql</outputDirectory>
              <createOutputFileName>${createOutputFileName}</createOutputFileName>
              <dropOutputFileName>drop-${db}.sql</dropOutputFileName>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.mysema.maven</groupId>
        <artifactId>apt-maven-plugin</artifactId>
        <version>1.1.3</version>
        <executions>
          <execution>
            <id>process</id>
            <goals>
              <goal>process</goal>
            </goals>
            <phase>generate-sources</phase>
            <configuration>
              <outputDirectory>target/generated-sources/java</outputDirectory>
              <processor>com.querydsl.apt.jpa.JPAAnnotationProcessor</processor>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.querydsl</groupId>
            <artifactId>querydsl-apt</artifactId>
            <version>${querydsl.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>

</project>